<%= form_with(model: property, local: true) do |form| %>
  <% if property.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(property.errors.count, "error") %> prohibited this property from being saved:</h2>

      <ul>
        <% property.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :postcode, '郵便番号' %>
    <%= form.text_field :postcode %>
  </div>

  <div class="field">
    <%= form.label :prefecture_code, '都道府県' %>
    <%#= form.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :code, :name, { prompt: '選択してください' }, class: 'form-control' %>
    <%= form.collection_select :prefecture_name, JpPrefecture::Prefecture.all, :name,:name, { prompt: '選択してください' }, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :address_city, '市区町村' %>
     <%= form.text_field :address_city %>
  </div>

  <div class="field">
    <%= form.label :address_street, '町名番地' %>
    <%= form.text_field :address_street %>
  </div>

  <div class="field">
    <%= form.label :address_building, '建物名' %>
    <%= form.text_field :address_building %>
  </div>

  <div class="field">
    <%= form.label :location, 'ロケーション' %>
    <%= form.text_field :location %>
  </div>

  <div class="field">
    <%= form.label :hobby, '趣味' %>
    <%= form.text_field :hobby %>
  </div>

   <div class="field">
    <%= form.label :layout, '間取り' %>
    <%= form.select :layout, ['ワンルーム', '1K', '1DK','1LDK','2K','2DK','2DK','2LDK','3K','3DK','3LDK','4K','4DK','4LDK'], {include_blank: '間取りを選択してください'}, class: 'sample' %>
  </div>

  <div class="field">
    <%= form.label :title, 'タイトル' %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :description, '物件説明' %>
    <%= form.text_area :description, size: "30x2", class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :details, '物件概要' %>
    <%= form.text_field :details %>
  </div>

  <div class="field">
    <%= form.label :price, '希望価格' %>
    <%= form.number_field :price %>
  </div>

  <div class="field">   <%# 追加 %>
    <%= form.label :image, '写真' %>
    <%= form.file_field :image %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

